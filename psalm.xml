<?xml version="1.0"?>
<psalm
    errorLevel="1"
    hideExternalErrors="true"
    resolveFromConfigFile="true"
    autoloader="vendor/autoload.php"
    findUnusedCode="true"
    findUnusedBaselineEntry="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src"/>
        <directory name="tests"/>
        <directory name="templates" />
        <directory name="public" />
        <directory name="routing/routes" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <!-- Ignore UnusedVariable in tests config directory -->
        <UnusedVariable>
            <errorLevel type="suppress">
                <file name="tests/config/*" />
            </errorLevel>
        </UnusedVariable>

        <MixedArrayAccess>
            <errorLevel type="suppress">
                <file name="src/Auth/Source/OrcidOIDCAuth.php" />
                <file name="src/Providers/OpenIDConnectProvider.php" />
            </errorLevel>
        </MixedArrayAccess>

        <MixedArgument>
            <errorLevel type="suppress">
                <file name="src/Auth/Source/OrcidOIDCAuth.php" />
                <file name="src/Providers/OpenIDConnectProvider.php" />
            </errorLevel>
        </MixedArgument>

        <PropertyNotSetInConstructor errorLevel="info"/>

        <!-- Ignore errors related to unused classes, methods... -->
        <UnusedClass errorLevel="suppress" />
        <UnusedMethodCall errorLevel="suppress" />
        <PossiblyUnusedMethod errorLevel="suppress" />
        <PossiblyUnusedReturnValue errorLevel="suppress" />
        <PossiblyUnusedParam errorLevel="suppress" />

        <!-- Ignore RiskyTruthyFalsyComparison -->
        <RiskyTruthyFalsyComparison errorLevel="suppress" />
    </issueHandlers>
<plugins><pluginClass class="Psalm\PhpUnitPlugin\Plugin"/></plugins></psalm>
